<h4>Editar perfil</h4>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style="color: red"><%= error %></p>
    <% end %>
<% end %>

<%= form_for(@profile) do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :git_url%>
    <%= f.text_field :git_url%>

    <%= f.submit 'Salvar Alterações', :class => 'btn right' %>
<% end %>

<%= link_to  "Voltar", profile_path(@profile), :class => 'btn left red' %>
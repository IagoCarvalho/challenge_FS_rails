<h1>Novo perfil</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style="color: red"><%= error %></p>
    <% end %>
<% end %>

<%= form_for(@profile) do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :git_url%>
    <%= f.text_field :git_url%>

    <%= f.submit %>
<% end %>

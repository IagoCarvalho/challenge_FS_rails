<head>
    <title>Indexador de perfis</title>
</head>

<body>
    <h4>Indexador de Perfis</h4>

    <%= form_tag(profiles_path, method: :get) do %>
        <div class="row">
            <div class="input-field inline col s12">
                <%= text_field_tag(:search, params[:search], :id => :search) %>
                <label for="search">Buscar</label>
                <span class="helper-text" data-error="wrong" data-success="right">Procure por nome, username, organização ou localização</span>
            </div>
        </div>

        <div>
        </div>
        <%= submit_tag("Buscar", :class => 'btn right') %>
    <% end %>

    <div class="profile-list">
        <% Array(@profiles).each do |profile|%>
            <div class="profile-item-container">

                <div class="profile-card-content z-depth-1">
                    <%= image_tag profile.profile_pic_url, :class => 'circle profile-index-image' %>
                    <div class="profile-info">
                        <i class="far fa-edit"></i>
                        <%= link_to profile.name, profile_path(profile) %>
                    </div>
                </div>

                <div class="github-info z-depth-2">
                    <div>
                        <i class="fab fa-github"></i>
                        <%= link_to profile.git_username, profile.git_url %>
                    </div>
                </div>

            </div>
        <% end %>
    </div>

</body>
